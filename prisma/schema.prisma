generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int       @id @default(autoincrement())
  name                  String
  email                 String    @unique
  password              String
  role                  Role      @default(USER)
  hasSetInitialPassword Boolean   @default(false)
  protests              Protest[]
}

model Protest {
  id          Int        @id @default(autoincrement())
  debtAmount  Decimal
  description String?
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  emolument   Emolument?

  @@index([userId])
}

model Emolument {
  id        Int     @id @default(autoincrement())
  amount    Decimal
  protestId Int     @unique
  protest   Protest @relation(fields: [protestId], references: [id])

  @@index([protestId])
}

enum Role {
  USER
  EMPLOYEE
  ADMIN
}
